              "// Status Code Validation\r",
              "pm.test(\"Status code is 201 - User Created\", function () {\r",
              "    pm.response.to.have.status(201);\r",
              "});\r",
              "\r",
              "// Response Body Validation\r",
              "pm.test(\"Response contains user ID\", function () {\r",
              "    let jsonData = pm.response.json();\r",
              "    pm.expect(jsonData.id).to.exist;\r",
              "});\r",
              "\r",
              "// Save user id for next requests\r",
              "let jsonData = pm.response.json();\r",
              "pm.environment.set(\"user_id\", jsonData.id);\r",
              "\r",
              "// Response Time Validation\r",
              "pm.test(\"Response time < 2000ms\", function () {\r",
              "    pm.expect(pm.response.responseTime).to.be.below(2000);\r",
              "});\r",
              "\r",
              "// Field validation\r",
              "pm.test(\"Response contains name and job\", function () {\r",
              "    pm.expect(jsonData).to.have.property(\"name\");\r",
              "    pm.expect(jsonData).to.have.property(\"job\");\r",
              "});"
